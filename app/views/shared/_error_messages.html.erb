<% if model.errors.any? %>
  <div id="error_explanation">
    <h2 class="bg-danger">
      This Form contains <%= pluralize(model.errors.count, "error") %>.  
    </h2>

    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
