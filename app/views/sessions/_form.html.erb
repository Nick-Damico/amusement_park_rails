<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag signin_path, method: 'POST', html: {class: 'form-horizontal'} do %>
        <div class="form-group">
          <%= label_tag 'user[name]', 'Name:' %>
          <%= text_field_tag 'user[name]', nil, placeholder: 'John Doe', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag 'user[password]', 'Password:' %>
          <%= password_field_tag 'user[password]', nil, placeholder: 'John Doe', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Login', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <p>New User? <%= link_to 'Sign Up', signup_path %></p>
    </div>
  </div>
</div>
